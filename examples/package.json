{
  "name": "executable-talk",
  "displayName": "Executable Talk",
  "description": "Transform Markdown presentations into executable narratives with interactive code demonstrations",
  "version": "0.1.0",
  "publisher": "executable-talk",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:executableTalk.openPresentation",
    "onLanguage:markdown",
    "workspaceContains:**/*.deck.md"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "executableTalk.openPresentation",
        "title": "Executable Talk: Start Presentation"
      },
      {
        "command": "executableTalk.closePresentation",
        "title": "Executable Talk: Stop Presentation"
      },
      {
        "command": "executableTalk.resetPresentation",
        "title": "Executable Talk: Reset Presentation"
      },
      {
        "command": "executableTalk.nextSlide",
        "title": "Executable Talk: Next Slide"
      },
      {
        "command": "executableTalk.previousSlide",
        "title": "Executable Talk: Previous Slide"
      },
      {
        "command": "executableTalk.openPresenterView",
        "title": "Executable Talk: Open Presenter View"
      }
    ],
    "languages": [
      {
        "id": "deck-markdown",
        "aliases": [
          "Deck Markdown",
          "deck.md"
        ],
        "extensions": [
          ".deck.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'test/unit/**/*.test.ts'",
    "test:integration": "node ./out/test/runTest.js",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.0.0"
  }
}
