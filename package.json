{
  "name": "executable-talk",
  "displayName": "Executable Talk",
  "description": "Transform Markdown presentations into executable narratives with interactive code demonstrations",
  "version": "0.2.0",
  "publisher": "focus-space",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ormasoftchile/executable-talk.git"
  },
  "bugs": {
    "url": "https://github.com/ormasoftchile/executable-talk/issues"
  },
  "homepage": "https://github.com/ormasoftchile/executable-talk#readme",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "presentation",
    "slides",
    "markdown",
    "demo",
    "executable",
    "live coding"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:executableTalk.openPresentation",
    "onLanguage:markdown",
    "onLanguage:deck-markdown",
    "workspaceContains:**/*.deck.md"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "executableTalk.openPresentation",
        "title": "Executable Talk: Start Presentation"
      },
      {
        "command": "executableTalk.closePresentation",
        "title": "Executable Talk: Stop Presentation"
      },
      {
        "command": "executableTalk.resetPresentation",
        "title": "Executable Talk: Reset Presentation"
      },
      {
        "command": "executableTalk.nextSlide",
        "title": "Executable Talk: Next Slide"
      },
      {
        "command": "executableTalk.previousSlide",
        "title": "Executable Talk: Previous Slide"
      },
      {
        "command": "executableTalk.openPresenterView",
        "title": "Executable Talk: Open Presenter View"
      },
      {
        "command": "executableTalk.validateDeck",
        "title": "Executable Talk: Validate Deck"
      }
    ],
    "languages": [
      {
        "id": "deck-markdown",
        "aliases": [
          "Deck Markdown",
          "deck.md"
        ],
        "extensions": [
          ".deck.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "deck-markdown",
        "scopeName": "text.html.markdown.deck",
        "path": "./syntaxes/deck-markdown.tmLanguage.json",
        "embeddedLanguages": {
          "meta.frontmatter.deck-markdown": "yaml",
          "meta.embedded.block.action.deck-markdown": "yaml"
        }
      }
    ],
    "configuration": {
      "title": "Executable Talk",
      "properties": {
        "executableTalk.useLsp": {
          "type": "boolean",
          "default": true,
          "description": "Use the Language Server Protocol for autocomplete, validation, hover, and other editing features. When disabled, falls back to the legacy provider-based implementation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'test/unit/**/*.test.ts'",
    "test:integration": "node ./out/test/runTest.js",
    "clean": "rimraf out",
    "package": "vsce package",
    "deploy": "vsce publish",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "chai": "^4.5.0",
    "eslint": "^8.54.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
